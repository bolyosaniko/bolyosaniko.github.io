---
import { Image } from "astro:assets";
import menuIcon from "../assets/images/menu_hamburger_icon.svg";
import Nav from "./nav.astro";
import Logo from "./logo.astro";

const navItems = [
    { text: "Colour Analysis", href: "/colour-analysis" },
    { text: "Colour Interpretation", href: "/colour-interpretation" },
    { text: "About Me", href: "/about" },
];
---

<header id="header" class="sticky top-0 z-40 backdrop-blur border-b border-slate-900/10 md:flex md:justify-between">
    <div class="flex justify-between items-center px-3 py-3">
        <a href="/">
            <Logo />
        </a>
        <button class="md:hidden" aria-label="Toggle Menu" data-aw-toggle-menu>
            <Image class="w-12 h-12" src={menuIcon} alt=""/>
        </button>
    </div>

    <Nav items={navItems} />


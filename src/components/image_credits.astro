---
const {
    image,
    author,
    authorUrl,
    source,
    sourceUrl,
} = Astro.props;
---

<div class="flex flex-col justify-center items-center gap-1 md:gap-2 py-4 md:py-8">
    <img class="w-32 md:w-48 h-auto justify-self-center" src={image} alt="" />
    <p class="text-sm md:text-lg"><a class="underline" href={authorUrl} target="_blank">{author}</a> (<a class="underline" href={sourceUrl} target="_blank">{source}</a>)</p>
</div>
